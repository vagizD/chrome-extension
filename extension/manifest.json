{
  "manifest_version": 3,
  "name": "SubLive",
  "description": "Tool for learning while watching",
  "version": "1.0",

  "background": {
    "service_worker": "worker/worker.js"
  },

  "action": {
    "default_popup": "logo/default_popup.html",
    "default_icon": "logo/default_img.png"
  },

  "permissions": ["scripting", "identity", "identity.email"],

  "content_scripts": [
    {
      "html": ["config_page/config_page.html"],
      "js": ["hover/hover.js", "logo/popup.js", "config_page/config_page.js"],
      "css": ["hover/hover.css", "config_page/config_page.css"],
      "matches":
      [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}